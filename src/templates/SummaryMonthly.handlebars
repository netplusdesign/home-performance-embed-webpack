    <div class="table-responsive">
        <table id="SummaryMonthly" class="table table-sm text-right">
            <caption>
                <p class="small">All power values in <abbr title="Kilowatt hours">kWh</abbr></p>
                <ol class="small">
                    <li>Base 65&deg;F</li>
                </ol>
            </caption>
            <thead class="thead-light">
                <tr>
                    <th class="text-left">{{dateYYYY response.items.0.date}}</th>
                    <th>Used</th>
                    <th>Solar</th>
                    <th>Net</th>
                    <th><abbr title="Average daily usage">ADU</abbr></th>
                    <th><abbr title="Heating Degree Days">HDD</abbr>&#185;</th>
                </tr>
                <tr>
                    <th class="text-left">Totals</th>
                    <th><a href="{{@root.src}}/#/months/usage?house={{@root.house}}&date={{dateYYYY response.items.0.date}}" >{{round response.totals.used}}</a></th>
                    <th><a href="{{@root.src}}/#/months/generation?house={{@root.house}}&date={{dateYYYY response.items.0.date}}" >{{round response.totals.solar}}</a></th>
                    <th>{{round response.totals.net}}</th>
                    <th>{{round1 response.totals.adu}}</th>
                    <th><a href="{{@root.src}}/#/months/temperature?house={{@root.house}}&date={{dateYYYY response.items.0.date}}" >{{round response.totals.hdd}}</a></th>
                </tr>
            </thead>
            <tbody>
                {{#each response.items}}
                <tr>
                    <td class="text-left"><a href="{{@root.src}}/#/days/summary?house={{@root.house}}&date={{dateYYYY-MM this.date}}" >{{dateMMM this.date}}</a></td>
                    <td><a href="{{@root.src}}/#/days/usage?house={{@root.house}}&date={{dateYYYY-MM this.date}}" >{{round this.used}}</a></td>
                    <td><a href="{{@root.src}}/#/days/generation?house={{@root.house}}&date={{dateYYYY-MM this.date}}" >{{round this.solar}}</a></td>
                    <td>{{round this.net}}</td>
                    <td>{{round1 this.adu}}</td>
                    <td><a href="{{@root.src}}/#/days/temperature?house={{@root.house}}&date={{dateYYYY-MM this.date}}" >{{round this.hdd}}</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
